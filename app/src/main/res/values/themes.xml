<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Final, top-level theme-->
    <style name="Theme.JobSeeker.DayNight" parent="Theme.JobSeeker"/>

    <!-- Base application theme. -->
    <style name="Theme.JobSeeker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!--Color-->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">@color/blue_300</item>
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorSecondaryVariant">@color/orange_400</item>

        <item name="android:colorBackground">@color/blue_50</item>
        <item name="colorSurface">@color/white_50</item>
        <item name="colorPrimarySurfaceVariant">?attr/colorPrimaryVariant</item>
        <item name="colorError">@color/red_400</item>

        <item name="colorOnPrimary">@color/white_50</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/black_900</item>
        <item name="colorOnSurface">@color/black_900</item>
        <item name="colorOnError">@color/black_900</item>

        <item name="scrimBackground">@color/white_50_alpha_060</item>
        <item name="android:statusBarColor">@color/blue_50_alpha_060</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Reply.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Reply.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Reply.LargeComponent</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.JobSeeker.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.JobSeeker.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.JobSeeker.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.JobSeeker.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.JobSeeker.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.JobSeeker.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.JobSeeker.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.JobSeeker.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.JobSeeker.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.JobSeeker.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.JobSeeker.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.JobSeeker.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <!--Styles-->
        <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface</item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
        <item name="navigationViewStyle">@style/Widget.JobSeeker.NavigationView</item>
<!--        <item name="chipStyle">@style/Widget.Reply.Chip.Entry</item>-->

        <!--System/Platform attributes-->
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

    </style>

    <style name="ThemeOverlay.JobSeeker.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>